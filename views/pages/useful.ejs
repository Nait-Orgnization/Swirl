<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Useful Tips</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>


<h1 class="tipsh1">Useful Tips For Travelling</h1>
<div class="mainDiv">
  
  <% tips.forEach(item=>{ %> 
    <div class="card">
      <h2 class="tipsh2"><%= item.title %></h2>
      <p class="tipsp"><%= item.description %></p>
      <form action="/showTip/<%=item.id%>" method="GET">
        <input type="hidden" name="title" value="<%= item.title %>">
        <input type="hidden" name="description" value="<%= item.description %>">
        <button id="<%=item.id%>">Edit Tip</button>
        </form>
      </div>
    <% })%>
  </div>


  <button id='addBtn'>Add New Tip</button>

  <section id='addNewTip'>
    <form action="/addTip" method="post">
     <input type="text" name="title" placeholder="Title" >
     <br>
     <textarea name="description" placeholder="Description" cols="30" rows="10"></textarea>
     <br>
     <button type="submit">Add New Tip</button>
  </form>
  </section>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="/js/app.js"></script>
  </body>
</html>